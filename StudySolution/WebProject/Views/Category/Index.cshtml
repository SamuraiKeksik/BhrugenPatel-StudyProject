@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}
@if (TempData["success"] != null)
{
    <h2>@TempData["success"]</h2>
}

<div class="container p-3">
    <div class="row pt-6">
        <div class="col-6">
            <h2 class="text-primary">Category list</h2>
        </div>
        <div class="col-6 text-end">            
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-lg"></i> &nbsp Create new category
            </a>
        </div>

    </div>


    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>Id</th>
                <th>Category name</th>
                <th>Display order</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td>@obj.Id</td>
                    <td>@obj.Name</td>
                    <td>
                        @obj.DisplayOrder                        
                    </td>
                    <td style="width:20%">
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-3">
                                <i class="bi bi-pencil"></i> &nbsp Edit
                            </a>
                            <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-primary text-end">
                                <i class="bi bi-trash"></i> &nbsp Delete
                            </a>
                        </div>
                        
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>